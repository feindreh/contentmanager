extends layout

block content
    p #{title}

    form(method='POST' action='' enctype="multipart/form-data")
        label(for='name') Name:
        input#name(type='text', name='name', required,value=(undefined===name ? '' : name))
        br
        label(for='description') Description:
        input#description(type='text', name='description', required,value=(undefined===description  ? '' : description))
        br
        label(for="price") Price:
        input#price(type="number",step="0.01",name="price",required,value=(undefined === price?"":price))
        br
        label(for="subcategory") Sub-Category:
        select(type='select' placeholder='Select Sub-Category' name='subcategory' required='true')
            option(value="") Select Sub-Category
            each option in SubCategorys
                option(value=option._id selected=(option.name === subCategory))  #{option.name}
        br
        button(type='submit') Submit
